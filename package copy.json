{
  "name": "invoice",
  "version": "1.0.0",
  "description": "invoice app for all desktop including gst calculation",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "invoiceapp",
    "gst",
    "billing"
  ],
  "author": "athul",
  "license": "ISC",
  "devDependencies": {
    "electron": "^9.0.5",
    "electron-builder": "^22.7.0"
  },
  "dependencies": {
    "mysql": "^2.17.1",
    "swiper": "^5.2.1"
  },
  "build": {
    "appId": "com.bentura.invoiceBuildPro",
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Development"
    },
    "directories": {
      "buildResources": "resources",
      "output": "release"
    }
  }
}
